#include <stdio.h>

int main() {
    
    char name[20];
    int grade;
    
    printf("Enter your name: ");
    scanf("%s", name);
    
    printf("Enter your General Average: ");
    scanf("%d", &grade);
    
    if (grade >= 98){
        printf("Your converted grade is 1.00, Very good!");
    }
    else if (grade >= 95 && grade <= 97){
        printf("Your converted grade is 1.25, Good job!");
    }
    else if (grade >= 93 && grade <= 94){
        printf("Your converted grade is 1.50, Great!");
    }
    else if (grade >= 89 && grade <= 92){
        printf("Your converted grade is 1.75, Good!");
    }
    else if (grade >= 85 && grade <= 88){
        printf("Your converted grade is 2.00, Fair Enough!");
    }
    else if (grade >= 81 && grade <= 84){
        printf("Your converted grade is 2.25, You can do better!");
    }
    else if (grade >= 78 && grade <= 80){
        printf("Your converted grade is 2.50, Keep trying!");
    }
    else if (grade >= 75 && grade <= 77){
        printf("Your converted grade is 3.00, Clutch!");
    }
    else {
        printf("Your converted grade is too low, Please do better next time");
    }
    
    
    return 0;
}
